{
    "Version": "2012-10-17",
    "Id": "OCP4Operator",
    "Statement": [
        {
            "Sid": "ocp4OperatorPolicy",
            "Effect": "Allow",
            "Action": [
                "s3:DeleteObject",
                "s3:GetObject",
                "s3:GetObjectAcl",
                "s3:GetObjectTagging",
                "s3:GetObjectVersion",
                "s3:PutObject",
                "s3:PutObjectAcl",
                "s3:PutObjectTagging"
            ],
            "Resource": "*"
        }
    ]
}